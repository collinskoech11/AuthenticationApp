<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login"
        android:background="@drawable/wallpaper">
    <TextView
            android:text="@string/authentication_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp" android:textSize="25sp"
            android:fontFamily="@font/aclonica" android:textColor="#FF9800" android:textStyle="bold"/>
    <TextView
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="10dp"
            android:fontFamily="@font/aclonica1" android:textSize="18sp" android:textColor="#FFFFFF"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:padding="10dp"
            android:id="@+id/emailText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="292dp"
            android:hint="Email" android:textColor="#FFFFFF"
            android:layout_marginEnd="10dp" android:textColorHint="#FFFFFF"
            android:background="@android:color/background_dark" android:fontFamily="@font/aclonica"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:padding="10dp"
            android:id="@+id/editText2"
            app:layout_constraintTop_toBottomOf="@+id/emailText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:hint="Password"
            android:fontFamily="@font/aclonica" android:textColor="#FFFFFF"
            android:background="@android:color/background_dark" android:textColorHint="#FFFFFF"/>
    <Button
            android:text="LOGIN"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/loginBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>